<Window x:Class="ToDoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToDo List"
        Height="480"
        Width="860"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PART-->
        <Border Grid.Column="0"
                Margin="0,0,16,0"
                Padding="12"
                Background="White"
                CornerRadius="10">

            <DockPanel>
                <TextBlock Text="Tasks"
                           FontSize="18"
                           FontWeight="Bold"
                           DockPanel.Dock="Top"
                           Margin="0,0,0,10"/>

                <ListView x:Name="TasksList"
                          BorderThickness="0"
                          Height="330"
                          SelectionChanged="TasksList_SelectionChanged">

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Id" Width="40"
                                            DisplayMemberBinding="{Binding Id}"/>

                            <GridViewColumn Header="Title" Width="170"
                                            DisplayMemberBinding="{Binding Title}"/>

                            <GridViewColumn Header="Expense" Width="80"
                                            DisplayMemberBinding="{Binding Expense}"/>

                            <GridViewColumn Header="Done" Width="60">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        
                                        <CheckBox IsChecked="{Binding Done, Mode=OneWay}"
                                                  IsEnabled="False"
                                                  HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>
                </ListView>

                <Button Content="Refresh"
                        DockPanel.Dock="Bottom"
                        Height="32"
                        Margin="0,10,0,0"
                        Click="Refresh_Click"/>
            </DockPanel>
        </Border>

        <!--RIGHT PART-->
        <Border Grid.Column="1"
                Padding="16"
                Background="White"
                CornerRadius="10">

            <StackPanel>
                <TextBlock Text="New / Edit Task"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="0,0,0,16"/>

                <TextBlock Text="Title"/>
                <TextBox x:Name="TitleBox"
                         Height="30"
                         Margin="0,4,0,12"/>

                <TextBlock Text="Expense (ex: 12.50)"/>
                <TextBox x:Name="ExpenseBox"
                         Height="30"
                         Margin="0,4,0,12"/>

                <CheckBox x:Name="DoneBox"
                          Content="Done"
                          Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Add"
                            Width="90"
                            Margin="0,0,10,0"
                            Click="Add_Click"/>

                    <Button Content="Update"
                            Width="90"
                            Margin="0,0,10,0"
                            Click="Update_Click"/>

                    <Button Content="Delete"
                            Width="90"
                            Click="Delete_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
